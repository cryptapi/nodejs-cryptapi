{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "exclude": ["node_modules"]
}
